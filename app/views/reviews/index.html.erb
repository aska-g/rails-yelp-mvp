<p id="notice"><%= notice %></p>

<h2>Reviews</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.rating %></td>
              </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a review', new_review_path %>
